<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pim2024 Fazenda Urbana</title>

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRheTVWlE5G6C1hZtwiKOMu6l8Lw5mdkNCWTrFbrg" crossorigin="anonymous" />
    
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Fazenda Urbana</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/Cliente">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Funcionario">Funcionários</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Produto">Produtos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Venda">Vendas</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <span class="text-muted">Fazenda Urbana - PIM 2024 - UNIP.</span>
        </div>
    </footer>

    <!-- Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRheTVWlE5G6C1hZtwiKOMu6l8Lw5mdkNCWTrFbrg" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRheTVWlE5G6C1hZtwiKOMu6l8Lw5mdkNCWTrFbrg" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
